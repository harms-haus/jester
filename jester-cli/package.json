{
  "name": "jester-cli",
  "version": "1.0.0",
  "description": "CLI tool to initialize Jester story framework in your project",
  "main": "bin/jester-init.js",
  "bin": {
    "jester-init": "./bin/jester-init.js",
    "jester-convert": "./bin/jester-convert.js",
    "jester-config": "./bin/jester-config.js",
    "jester-validate": "./bin/jester-validate.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "cleanup": "node scripts/build.js --cleanup",
    "test": "node bin/jester-init.js --test",
    "test:standalone": "node test-standalone.js",
    "test:convert": "node bin/jester-convert.js --help",
    "test:config": "node bin/jester-config.js --help",
    "test:validate": "node bin/jester-validate.js --help",
    "prepublishOnly": "npm run build && npm test",
    "postpublish": "npm run cleanup"
  },
  "keywords": [
    "jester",
    "story",
    "framework",
    "cli",
    "initialization",
    "bedtime-stories",
    "ai",
    "storytelling"
  ],
  "author": "Jester Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "prompts": "^2.4.2",
    "chalk": "^4.1.2"
  },
  "files": [
    "bin/",
    "ides/",
    ".jester/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jester-cli/jester-cli.git"
  },
  "bugs": {
    "url": "https://github.com/jester-cli/jester-cli/issues"
  },
  "homepage": "https://github.com/jester-cli/jester-cli#readme"
}
